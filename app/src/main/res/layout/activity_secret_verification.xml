<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecretVerificationActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_logo"
            android:src="@drawable/cook_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/header">

        <TextView
            android:id="@+id/enter_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activate_msg"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_top_entries"
            android:layout_marginBottom="@dimen/margin_bottom_entries"/>
        <EditText
            android:id="@+id/verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activate_code_txt"
            android:minEms="10"
            android:inputType="text"
            android:layout_marginTop="@dimen/margin_top_entries"
            android:layout_marginBottom="@dimen/margin_bottom_entries"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Selected_layout_height"
            android:background="#3C95C9"
            android:textSize="@dimen/textSize"
            android:layout_marginTop="@dimen/margin_top_entries"
            android:layout_marginBottom="@dimen/margin_bottom_entries"
            android:text="@string/submit_msg" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:text="Copyright@Cheffy"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#3C95C9"
            android:layout_marginBottom="@dimen/margin_bottom_entries"/>

    </LinearLayout>
</RelativeLayout>
