<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ForgetPassActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <ImageView
            android:src="@drawable/cook_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/header">

        <TextView
            android:id="@+id/forget_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:textSize="25dp"
            android:textColor="#3C95C9"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_top_entries"
            android:layout_marginBottom="@dimen/margin_bottom_entries"/>

        <TextView
            android:id="@+id/msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hey, it happens to everyone, just let us know your registered mobile number, and we we'll send you an activation code to reset your password"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/margin_top_entries"
            android:layout_marginBottom="@dimen/margin_bottom_entries"
            android:textColor="#3C95C9"/>

        <EditText
            android:id="@+id/inputEmailID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:minEms="10"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/margin_top_entries"
            android:layout_marginBottom="@dimen/margin_bottom_entries"
            android:singleLine="true"/>

        <Button
            android:id="@+id/confirmation_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Selected_layout_height"
            android:background="#3C95C9"
            android:textSize="@dimen/textSize"
            android:layout_marginTop="@dimen/margin_top_entries"
            android:layout_marginBottom="@dimen/margin_bottom_entries"
            android:text="Send Confirmation Code" />

        <Button
            android:id="@+id/activate_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Selected_layout_height"
            android:background="#3C95C9"
            android:textSize="@dimen/textSize"
            android:layout_marginTop="@dimen/margin_top_entries"
            android:layout_marginBottom="@dimen/margin_bottom_entries"
            android:text="Activation" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:text="Copyright@Cheffy"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#3C95C9"/>
    </LinearLayout>
</RelativeLayout>
